<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
        <item name="colorPrimaryDark">@color/brown2</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/brown2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:actionDropDownStyle">@style/DropDownListView</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="AppTheme.ATEvent">
        <item name="colorAccent">@color/at_event_color</item>
    </style>

    <style name="AppTheme.MicroText" parent="BaseTheme">
        <item name="android:textSize">@dimen/font_micro</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Barcode" parent="AppTheme.Transparent">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.LightFont">
        <item name="android:textViewStyle">@style/TextAppearance.Light</item>
    </style>

    <style name="AppTheme.NoStatusBar">
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.LockScreen" parent="AppTheme.FullScreen">
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/subAccentColor</item>
    </style>

    <style name="EventDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

</resources>