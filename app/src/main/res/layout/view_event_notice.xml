<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <FrameLayout
            android:id="@+id/disableCheckBoxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#88ffffff"
            android:paddingBottom="@dimen/spacing_smaller"
            android:paddingEnd="@dimen/spacing_smaller"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/spacing_smaller"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/spacing_smaller">

            <CheckBox
                android:id="@+id/disableShowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label.event.type.today"/>
        </FrameLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close"
            style="?borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:minWidth="100dp"
            android:text="@string/label.close"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_a"/>

        <Button
            android:id="@+id/participate"
            style="?borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="?selectableItemBackground"
            android:textColor="#FF5555"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>