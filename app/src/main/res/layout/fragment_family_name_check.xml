<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:lineSpacingExtra="@dimen/spacing_micro"
        android:text="함께 살고 있는 가족 기준으로 관리비가 차감됩니다.\n우리집을 대표할 이름을 지어주세요.\n이름은 언제든지 변경할 수 있습니다."
        android:textSize="@dimen/font_micro"/>

    <EditText
        android:id="@+id/name"
        style="@style/AppTheme.Widget.EditText.SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:hint="우리집 이름(10자 이하)"/>

    <TextView
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:text="@string/message.family.exist"
        android:textColor="@color/errorColor"
        android:textSize="@dimen/font_micro"
        android:visibility="gone"/>

    <com.zslide.widget.RequestButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:enabled="false"
        android:text="@string/label.next"
        android:textColor="@color/white"/>
</LinearLayout>