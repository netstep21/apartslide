<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/spacing_huge"
    android:paddingLeft="@dimen/spacing_huge"
    android:paddingRight="@dimen/spacing_huge"
    android:paddingStart="@dimen/spacing_huge"
    android:paddingTop="@dimen/spacing_huge">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/font_normal"
        android:visibility="gone"
        tools:text="타이틀"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_smaller"
        android:textSize="@dimen/font_normal"
        tools:text="메시지"/>
</LinearLayout>