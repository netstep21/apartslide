<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <EditText
        android:id="@+id/name"
        style="@style/AppTheme.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="@string/label.name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/nickname"
        style="@style/AppTheme.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="@string/label.nickname"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/black"/>

    <LinearLayout
        style="@style/AppTheme.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:padding="0dp">

        <TextView
            android:id="@+id/birthYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="?selectableItemBackground"
            android:padding="@dimen/spacing_large"
            android:singleLine="true"
            android:text="@string/label.birth.year"/>

        <View
            style="@style/Divider.Vertical"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/birthMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:padding="@dimen/spacing_large"
            android:singleLine="true"
            android:text="@string/label.birth.month"/>

        <View
            style="@style/Divider.Vertical"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/birthDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:padding="@dimen/spacing_large"
            android:singleLine="true"
            android:text="@string/label.birth.day"/>
    </LinearLayout>

    <LinearLayout
        style="@style/AppTheme.Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:padding="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/spacing_large"
            android:singleLine="true"
            android:text="@string/label.sex"/>

        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:checkedButton="@+id/man"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:paddingEnd="@dimen/spacing_smaller"
                android:paddingLeft="@dimen/spacing_smaller"
                android:paddingRight="@dimen/spacing_smaller"
                android:paddingStart="@dimen/spacing_smaller"
                android:text="@string/label.sex.man"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/woman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:paddingEnd="@dimen/spacing_smaller"
                android:paddingLeft="@dimen/spacing_smaller"
                android:paddingRight="@dimen/spacing_smaller"
                android:paddingStart="@dimen/spacing_smaller"
                android:text="@string/label.sex.woman"
                android:textColor="@color/black"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>