<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_normal"
            android:text="@string/label.apartment.registration"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@null"
            android:padding="@dimen/spacing_normal"
            android:src="@drawable/ic_cancel_gray"/>
    </FrameLayout>

    <View
        style="@style/Divider"
        android:background="@color/gray_b"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:id="@+id/registrationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="@dimen/spacing_normal">

                <EditText
                    android:id="@+id/apartmentName"
                    style="@style/AppTheme.Widget.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/label.apartment.name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:padding="@dimen/spacing_normal"
                    android:textSize="@dimen/font_micro"/>

                <Button
                    android:id="@+id/registrationApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:background="@drawable/btn_subaccent"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/spacing_normal"
                    android:text="@string/label.registration.apply"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>