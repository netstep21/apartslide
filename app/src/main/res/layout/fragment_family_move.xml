<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/spacing_smaller"
        android:text="아래 두가지 버튼 중에\n해당하는 버튼을 누르세요."/>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/btn_family_exist"
            android:drawablePadding="@dimen/spacing_smaller"
            android:drawableTop="@drawable/ic_people_alpha30"
            android:gravity="center"
            android:padding="@dimen/spacing_large"
            android:text="@string/label.family.move.alone"
            android:textColor="@color/white"
            android:textSize="@dimen/font_huge"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/together"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:background="@drawable/btn_family_new"
            android:drawablePadding="@dimen/spacing_smaller"
            android:drawableTop="@drawable/ic_group_alpha30"
            android:gravity="center"
            android:padding="@dimen/spacing_large"
            android:text="@string/label.family.move.together"
            android:textColor="@color/white"
            android:textSize="@dimen/font_huge"
            tools:ignore="MissingPrefix"/>

    </LinearLayout>
</RelativeLayout>