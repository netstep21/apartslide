<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentColor">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="이번 달 적립 줌머니"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/zmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/month"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:drawableEnd="@drawable/img_lock_arrow_white"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/img_lock_arrow_white"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="3,000원"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="14dp"
            android:src="@drawable/ic_lock_exit"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/moreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/moreZmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="줌머니 더 모으기"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="#746A42"/>

            <!--<com.apartslide.widget.CirclePageIndicator-->
                <!--android:id="@+id/indicator"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="1dp"-->
                <!--app:fillColor="#746a4e"-->
                <!--app:radius="2.5dp"-->
                <!--app:strokeColor="#746a4e"-->
                <!--app:strokeWidth="0.5dp"/>-->
        </LinearLayout>

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/moreLabel"
            android:layout_alignStart="@+id/moreLabel"
            android:layout_below="@+id/moreLabel"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="12dp"
            android:drawableEnd="@drawable/img_lock_arrow_greengray"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/img_lock_arrow_greengray"
            android:text="친구초대"
            android:textColor="#746A42"
            android:textSize="22sp"/>


        <ImageView
            android:id="@+id/img"
            android:layout_width="98.5dp"
            android:layout_height="72dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"/>

        <!--<com.apartslide.widget.WrapHeightInfiniteViewPager-->
        <!--android:id="@+id/viewPager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->
    </RelativeLayout>
</LinearLayout>