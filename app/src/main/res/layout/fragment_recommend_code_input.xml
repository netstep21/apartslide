<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_huge">

    <TextView
        android:id="@+id/message"
        style="@style/TextAppearance.Auth.Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_huge"/>

    <EditText
        android:id="@+id/recommendCode"
        style="@style/AppTheme.Widget.EditText.Auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="@string/label.recommender.hint"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <com.zslide.widget.RequestButton
        android:id="@+id/complete"
        style="@style/AppTheme.Widget.Button.Auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_huge"
        android:text="회원가입 완료"
        app:progressColor="@color/black"/>

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/spacing_micro"
        android:text="@string/message.terms"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="@dimen/font_mini"/>
</LinearLayout>