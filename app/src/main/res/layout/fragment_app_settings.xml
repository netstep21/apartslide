<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <com.zslide.widget.AppSettingItemView
            android:id="@+id/versionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:title="@string/label.info.version"/>

        <View style="@style/Divider"
              android:layout_marginBottom="@dimen/spacing_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppTheme.Preference.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label.terms"/>

            <View style="@style/Divider"/>

            <LinearLayout
                android:id="@+id/useTerms"
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label.terms.use"
                    android:textSize="@dimen/font_micro"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_ltr"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                android:id="@+id/privacyTerms"
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label.terms.privacy"
                    android:textSize="@dimen/font_micro"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_ltr"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                android:id="@+id/locationTerms"
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label.terms.location"
                    android:textSize="@dimen/font_micro"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_ltr"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginBottom="@dimen/spacing_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppTheme.Preference.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label.mobitle.intro"/>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.business.name"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.representation"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle.representation"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_address"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle.address"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.homepage"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle.homepage"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.company_registration_number"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle.number1"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                style="@style/Widget.AppTheme.Preference.Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label.vendor_registration_number"
                    android:textSize="@dimen/font_minimum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/label.mobitle.number2"
                    android:textSize="@dimen/font_micro"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>