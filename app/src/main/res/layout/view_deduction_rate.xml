<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deduction"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/bg_deduction"
    android:paddingBottom="@dimen/spacing_large"
    android:paddingLeft="@dimen/spacing_smaller"
    android:paddingRight="@dimen/spacing_smaller"
    android:paddingTop="@dimen/spacing_large">

    <TextView
        android:id="@+id/label_deduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:text="@string/label.deduction"
        android:textColor="@color/purple_light"
        android:textSize="@dimen/font_normal"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_deduction"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/deductionRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labelDeductionRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/deductionRate"
            android:layout_toEndOf="@id/deductionRate"
            android:layout_toRightOf="@id/deductionRate"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal"/>
    </RelativeLayout>
</RelativeLayout>